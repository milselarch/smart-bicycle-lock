<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f00505"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical|center_horizontal"
    android:id="@+id/intruder_screen"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCK BROKEN/HACKED"
        android:textColor="#FFFFFF"
        android:fontFamily="monaco"
        android:textSize="28sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap screen to continue"
        android:textColor="#FFFFFF"
        android:fontFamily="open sans"
        android:textSize="17sp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:text=""
        android:background="@drawable/error_outline_black"
        android:layout_marginTop="40dp"
        />


</LinearLayout>